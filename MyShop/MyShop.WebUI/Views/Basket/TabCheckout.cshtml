@model MyShop.Core.Models.Order
    <ul class="nav nav-tabs">
        <li class="active"><a href="#order" data-toggle="tab" aria-expanded="true">Order</a></li>
        <li class=""><a href="#delivery" data-toggle="tab" aria-expanded="false">Delivery</a></li>
        <li class=""><a href="#payment" data-toggle="tab" aria-expanded="false">Payment</a></li>
        @*<li class="disabled"><a>Payment</a></li>*@

    </ul>
    <div id="myTabContent" class="tab-content">

        <div class="tab-pane fade active in" id="home">
            @using (Html.BeginForm("Checkout", "Basket", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Order</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Delivery, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.Delivery, new SelectList(Enum.GetValues(typeof(MyShop.Core.Models.Order.DeliveryType))), "Select")
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Street, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ZipCode, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BasketTotal, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BasketTotal, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BasketTotal, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Proceed To Delivery" class="btn btn-default" />
                    </div>
                </div>

            }
        </div>

        <div class="tab-pane fade" id="delivery">
            <h3>Courier Options</h3>
            <br />
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Courier Type</th>
                        <th>Description</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Standard Delivery</td>
                        <td>Orders will be delivered to customers provided addresses between 2-7 working days</td>
                        <td>R60.00</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Express Delivery</td>
                        <td>Orders will be delivered to customers provided addresses the next working day</td>
                        <td>R95.00</td>
                    </tr>
                </tbody>
            </table>
            <br />
            <h3>Collection Options</h3>
            <br />
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Collection Type</th>
                        <th>Description</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Normal Collection</td>
                        <td>Customers can pick-up there books from a selected warehouse between 3-7 working days</td>
                        <td>R25.00</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Delayed Collection</td>
                        <td>Customers can pick-up there books from a selected warehouse between 7-14 working days</td>
                        <td>R50.00</td>
                    </tr>

                </tbody>
            </table>
            <br />
            <div class="form-horizontal">
                <h4>Please select a courier method:</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    <div class="col-md-10">
                        Standary Delivery:  @Html.RadioButtonFor(model => model.DeliveryMethod, "Standard Delivery")
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        Express Delivery:  @Html.RadioButtonFor(model => model.DeliveryMethod, "Express Delivery")
                    </div>
                </div>
                <br />
                @*<div class="form-group">
                @Html.LabelFor(model => model.BasketTotal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BasketTotal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BasketTotal, "", new { @class = "text-danger" })
                </div>
            </div>*@
                <br />
            </div>
        </div>

        <div class="tab-pane fade" id="payment">

        </div>
      
    </div>